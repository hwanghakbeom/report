<div class="container">
	<div class="col-md-4 col-md-offset-4">
	  <div class="padded">
	    <div class="login box" style="margin-top: 80px;">
	      <div class="box-header">
	        <span class="title">Login</span>
	      </div>
				<div class="box-content padded">
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'separate-sections'}) do |f| %>
						<div class="input-group addon-left">
							<span class="input-group-addon" href="#">
	              <i class="icon-user"></i>
	            </span>
	            <%= f.input_field :email, label: false, placeholder: 'email' %>
	          </div>
	          <div class="input-group addon-left">
	            <span class="input-group-addon" href="#">
	              <i class="icon-key"></i>
	            </span>
	          	<%= f.input_field :password, label: false, placeholder: 'password' %>  
	          </div>
						<%= button_tag(type: 'submit', class:"btn btn-blue btn-block") do %>
							Login <i class='icon-signin'></i>
						<% end %>
					<% end %>
					<div>
						<% if devise_mapping.registerable? && controller_name != 'registration' %>
							<%= link_to new_registration_path(resource_name) do %>
								Don't have an account? <strong>Sign Up</strong>
							<% end %>
						<% end %>
					</div>	
				</div>
	    </div>
	  </div>
	</div>
</div>
